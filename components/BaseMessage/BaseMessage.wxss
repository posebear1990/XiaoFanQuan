@import "/resource/iconfont/iconfont.wxss";

.base-message {
  padding: 27rpx 40rpx 27rpx 35rpx;
  border-bottom: 1rpx solid #efefef;
  position: relative;
  display: flex;
}
.base-message .avatar {
  flex-grow: 0;
  padding-right: 10px;
}
.base-message .avatar .avater-image {
  width: 95rpx;
  height: 95rpx;
  border-radius: 100%;
  background: #fff;
  box-shadow: inset 0 0 25rpx 4rpx rgba(55, 55, 55, 0.2);
  border: 1rpx solid #f0a0ac;
  margin-top: -3rpx;
}
.base-message .base-message-info-container {
  flex-grow: 1;
}

.base-message.active {
  border-bottom: 1rpx solid white;
}

.base-message-info {
  margin-bottom: 6rpx;
  font-size: 15px;
}

.base-message-info .home-user {
  display: inline-block;
  width: 45%;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: top;
}

.base-message-info .home-date {
  display: inline-block;
  width: 55%;
  text-align: right;
  vertical-align: top;
  color: #5a6b79;
  font-size: 13px;
}

.base-message-content {
  display: block;
  font-size: 15px;
}

.base-message-content .text-content {
  display: inline;
}
.base-message-content .user-name,
.base-message-content .topic {
  font-weight: 500;
  color: #f0a0ac;
  padding-left: 2rpx;
  padding-right: 3rpx;
}

.base-message-content .emphasize {
  font-weight: 700;
}

.base-message-image {
  margin-top: 16rpx;
  width: 100%;
  border-radius: 15rpx;
  border: 1rpx solid #ccd3d8;
}
.base-message-action {
  transition: opacity 0.2s ease-out;
  opacity: 0;
  height: 0;
  overflow: hidden;
  position: absolute;
}
.base-message.active .base-message-action {
  opacity: 1;

  display: block;
  height: 100%;
  width: 100%;
  top: -4rpx;
  left: 0;
  background: rgba(250, 250, 250, 0.9);
  box-shadow: 0px 0px 15px 0px rgba(119, 119, 119, 0.2);

  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
