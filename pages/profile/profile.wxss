/* pages/profile/profile.wxss */
scroll-view {
    color: #353535;
    background-color: #eee;
    height: 100vh;
}
.profile-container {
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;
    background: #fff;
}

.profile-header {
    padding-top: 10px;
}

.profile-header text, .profile-header image {
    display: block;
}

.profile-header-img {
    width: 50px; height: 50px;
    margin: 0 auto;
    border-radius: 100%;
    border: 2px solid #fff;
}
.profile-header-nick {
    margin-top: 10px;
    text-align: center;
}

.profile-header-info {
    margin-top: 5px;
    margin-bottom: 5px;
    font-size: 12px;
    text-align: center; 
}
.profile-header-intro {
    width: 90%;
    display: block;
    margin: 0 auto;
    min-height: 80px;
}

.profile-statistics {
  padding-top: 10px;
  margin-top: 10px;
  width: 100%; height: 50px;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #ddd;
}

.profile-statistics > view {
    width: 33.33%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.profile-statistics text {
    display: flex;
}

.profile-about {
    margin-top: 20px;
    margin-bottom: 20px;
    height: 50px;
    text-align: center;
    line-height: 50px;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    background: #fff;
} 