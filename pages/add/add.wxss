.add-text-area-container {
  position:absolute;
  overflow:hidden;
  height:100%;
  width:100%;
}
.add-text-area {
  height: 100%;
  width: 100%;
  position: absolute;
  overflow: hidden;
}
.add-tab-bar {
  display:flex;
  position: fixed;
  width: 100%; height: 40px;
  left: 0; right: 0;
  bottom: 0;
  background-color: #f7f7f7;
  flex-direction: row;
  justify-content: space-between;
  z-index: 10;
}
.add-send {
  position: absolute;
  right: 10px;
  bottom: 10px;
  width:20px;
  height:20px;
}
.add-send-icon {
  width: 20px;
  height: 20px;
}